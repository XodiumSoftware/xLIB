  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'xlib'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=xlib"],
        "filter": {
          "name": "xlib",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration test 'test_forger'",
      "cargo": {
        "args": ["test", "--no-run", "--test=test_forger", "--package=xlib"],
        "filter": {
          "name": "test_forger",
          "kind": "test"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
